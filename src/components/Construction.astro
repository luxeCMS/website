---
import { Icon } from "astro-icon/components";
import GridBackground from "./grid-background/GridBackground.astro";
---

<GridBackground />
<div class="w-screen h-screen absolute top-0 left-0">
  <div
    class="flex flex-col justify-center items-center h-full text-neutral-200 px-4"
  >
    <h1
      class="text-6xl md:text-[92px] font-bold pb-2 text-center w-full font-display"
    >
      LuxeCMS
    </h1>
    <h2 class="text-xl md:text-2xl pb-4 text-center w-full">
      The first truly composable headless CMS built for the modular web.
    </h2>
    <p class="text-center text-sm md:text-base text-neutral-400 w-full">
      This website is currently under construction. Stay tuned.
    </p>
    <div class="flex justify-center items-center gap-6 my-8">
      <a
        href="https://github.com/luxeCMS/luxe"
        target="_blank"
        title="LuxeCMS GitHub"
        class="hover:scale-110 active:scale-110 transition-all ease-in-out duration-300"
      >
        <Icon name="github" size={36} class="fill-neutral-200" />
      </a>
      <a
        href="https://discord.gg/6XzN3e8VCk"
        target="_blank"
        title="LuxeCMS Discord Server"
        class="hover:scale-110 active:scale-110 transition-all ease-in-out duration-300"
      >
        <Icon name="discord" size={36} class="fill-neutral-200" />
      </a>
    </div>
  </div>
</div>
